<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/studrecyccardimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/person_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_width="2dip"
            app:riv_corner_radius="60dip" />

        <TextView
            android:id="@+id/studrollnum"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/studrecyccardimage" />

        <TextView
            android:id="@+id/studrecycnametext"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="28dp"
            android:text="Name of Sudent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.566"
            app:layout_constraintStart_toEndOf="@+id/studrecyccardimage"
            app:layout_constraintTop_toTopOf="@+id/studrecyccardimage" />

        <TextView
            android:id="@+id/studrecyccoursetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="24dp"
            android:text="Course of student"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/studrecyccardimage"
            app:layout_constraintTop_toBottomOf="@+id/studrecycnametext" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    
</androidx.cardview.widget.CardView>